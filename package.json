{
  "name": "aggregator-the-agitator",
  "version": "1.1.5",
  "description": "FDX-aligned REST API for financial data aggregation",
  "main": "dist/server.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch --clear-screen=false src/server.ts",
    "mcp": "node dist/mcp/index.js",
    "mcp:dev": "tsx src/mcp/index.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ci": "vitest run",
    "typecheck": "tsc --noEmit",
    "setup": "chmod +x scripts/setup-dev.sh && scripts/setup-dev.sh",
    "docker:build": "docker build -t fdx-resource-api .",
    "docker:run": "docker run -p 3000:3000 --env-file .env fdx-resource-api",
    "docker:dev": "docker-compose --profile dev up --build",
    "docker:prod": "docker-compose up --build -d",
    "docker:stop": "docker-compose down",
    "mock-auth": "node scripts/mock-auth-server.js",
    "security:audit": "pnpm audit --audit-level moderate",
    "security:fix": "pnpm audit fix",
    "docs:generate": "redoc build openapi.yaml --output docs/api-docs.html",
    "docs:serve": "redoc serve openapi.yaml --watch",
    "clean": "rm -rf dist coverage .nyc_output",
    "reset": "npm run clean && rm -rf node_modules && pnpm install"
  },
  "keywords": [
    "fdx",
    "financial",
    "api",
    "aggregation",
    "oauth2",
    "typescript",
    "fastify"
  ],
  "author": "Mark Coleman",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "supertest": "^7.1.4",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.0",
    "@fastify/helmet": "^11.0.0",
    "@fastify/jwt": "^10.0.0",
    "@fastify/swagger": "^8.0.0",
    "@fastify/swagger-ui": "^2.0.0",
    "@modelcontextprotocol/sdk": "^1.20.0",
    "dotenv": "^17.2.3",
    "fastify": "^4.0.0",
    "fastify-plugin": "^5.1.0",
    "jose": "^6.1.0",
    "zod": "^3.0.0"
  }
}
