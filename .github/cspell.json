  "flagWords": [],
  "ignoreWords": [],
  "patterns": [
    {
      "name": "Markdown links",
      "pattern": "\\[.*?\\]\\(.*?\\)",
      "description": "Ignore markdown link syntax"
    },
    {
      "name": "Code blocks", 
      "pattern": "```[\\s\\S]*?```",
      "description": "Ignore code blocks"
    },
    {
      "name": "Inline code",
      "pattern": "`[^`]*?`",
      "description": "Ignore inline code"
    },
    {
      "name": "URLs",
      "pattern": "https?://[^\\s]+",
      "description": "Ignore URLs"
    },
    {
      "name": "File paths",
      "pattern": "\\./[^\\s]+|/[^\\s]+\\.[a-zA-Z0-9]+",
      "description": "Ignore file paths"
    },
    {
      "name": "Environment variables",
      "pattern": "[A-Z_]+=[^\\s]+",
      "description": "Ignore environment variable assignments"
    },
    {
      "name": "Hex colors",
      "pattern": "#[0-9a-fA-F]{3,8}",
      "description": "Ignore hex color codes"
    },
    {
      "name": "Git hashes",
      "pattern": "\\b[a-f0-9]{7,40}\\b",
      "description": "Ignore git commit hashes"
    }
  ],
  "overrides": [
    {
      "filename": "**/*.json",
      "words": ["instanceof", "typeof", "readonly"]
    },
    {
      "filename": "**/*.yml",
      "words": ["yml", "yaml", "cron", "ubuntu", "macos", "windows"]
    },
    {
      "filename": "**/*.yaml", 
      "words": ["yml", "yaml", "cron", "ubuntu", "macos", "windows"]
    },
    {
      "filename": "**/package.json",
      "words": ["devDependencies", "peerDependencies", "optionalDependencies"]
    }
  ],
  "ignorePaths": [
    "node_modules/**",
    "dist/**",
    "build/**",
    "coverage/**",
    ".git/**",
    "*.min.js",
    "*.map",
    "package-lock.json",
    "pnpm-lock.yaml",
    "yarn.lock"
  ]
